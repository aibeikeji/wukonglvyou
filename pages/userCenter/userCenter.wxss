/**userCenter.wxss**/
/* 2018-9-17新增加 */
page{
  width:100%;
  height:100%;
  background:#fff;
}
.userPicture{
  margin-top:24rpx;
}
.userMessage{
  display:flex;
  justify-content: space-between;
  margin:0 30rpx;
  align-items: center;
}
.userPic{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.userPic image{
  width:100%;
  height:100%;
  border-radius:50%;
}
.certification{
  width:28rpx;
  height:28rpx;
  margin-right:6rpx;
}
.certification image{
  width:100%;
  height:100%;
}
.userRight{
  display:flex;
  justify-content: space-between;
}
.user-name{
  color:#333333;
  font-size:36rpx;
  font-weight:bold;
}
.certification_icon{
  display:flex;
  justify-content:flex-end;
  margin-top:10rpx;
}
.next-btn{
  width:28rpx;
  height:28rpx;
}
.next-btn image{
  width:100%;
  height:100%;
}
.padBottom{
  margin-left:40rpx;
}
.usercenter-item{
  height:200rpx;
  border-radius:12rpx;
  margin:48rpx 30rpx 20rpx 30rpx;
  box-shadow: 0px 3px 20px #eee;
  display:flex;
  justify-content: space-around;
  align-items:center;
}
.items{
  text-align:center;
}
.items-pic{
  width:64rpx;
  height:64rpx;
  margin:0 auto;
}
.items-pic image{
  width:100%;
  height:100%;
}
.items text{
  font-size:32rpx;
  color:#333;
  font-weight:600;
}
.items-item{
  display:flex;
  justify-content: space-between;
  margin:0 30rpx;
  height:100rpx;
  align-items: center;
}
.items-left{
  display:flex;
}
.items_icon{
  width:48rpx;
  height:48rpx;
  margin-right:16rpx;
}
.items_icon image{
  width:100%;
  height:100%;
}