/* pages/find/find.wxss */
page{
  width:100%;
 overflow:auto;
height:100%;
background-color:#f5f5f5;
font-size:36rpx;
font-family:"UI Display", "Robot","PingFang SC", "思源黑体";

}
.active-item{
  width:95%;
  height:350rpx;
  margin:0 auto;
  border-radius:40rpx;
  position:relative;
  margin-bottom:20rpx;
}
.active-item:first-child{
  margin-top:20rpx;
}
.active-bg{
  width:100%;
  height:100%;
  border-radius:40rpx;
  background:#000;
  position:relative;
}
.active-img{
  width:100%;
  height:100%;
  border-radius:40rpx;
  position:absolute;
  opacity: 0.8;
}
.title{
  color:#fff;
  font-size:34rpx;
  position:absolute;
  top:30rpx;
  left:5%;
  right:10%;

}
.active-name{
  color:#E7E7E7;
  font-size:26rpx;
  position:absolute;
  top:130rpx;
  left:5%;
}
.time_read{
  color:#E7E7E7;
  font-size:22rpx;
  position:absolute;
  top:250rpx;
  left:5%;
}
.noActive{
  margin-top:60rpx;
  font-size:28rpx;
  color:#000;
  text-align: center;
}
.activeImg{
  width:400px;
  height:400px;
}
.noActiveImg{
  width:100%;
}