/**userInfo.wxss**/
.w-100{
  width:100%;
  overflow:hidden;
}
.user-avatar{
  width:92%;
  margin:20rpx auto;
  height:184rpx;
  border-radius:16rpx;
  box-shadow: 0px 3px 20px #eee;
}
.user-icon{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}
.user-icon image{
  width:100%;
  height:100%;
  border-radius:50%;
}
.user-center{
  margin:0 40rpx;
  display:flex;
  height:100%;
  align-items:center;
  justify-content: space-between;
}
.user-message{
  width:92%;
  margin:20rpx auto;
  height:auto;
  padding-bottom:40rpx;
  padding-top:40rpx;
  border-radius:16rpx;
  box-shadow: 0px 3px 20px #eee;
  position:relative;
  z-index: 500;
}
.user-items{
  margin:0  56rpx 0 50rpx;
  display:flex;
  justify-content: space-between;
  height:100rpx;
  align-items:center;
}
.user-left{
  font-size:32rpx;
  color:#333333;
}
.user-right{
  font-size:28rpx;
  color:#999999;
}
.next-btn{
  width:28rpx;
  height:28rpx;
}
.next-btn image{
  width:100%;
  height:100%;
}
.w-a{
  width:100%;
}
.user-img{
  width:100rpx;
  height:100rpx;
}
.col-md-s{
  margin:0 30rpx;
  border-bottom:1px solid #eee;
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:20rpx 0;
}
.noBorder{
  border:0;
}
.col-md-left{
  color:#333;
  font-size:32rpx;
}
.col-md-right{
  color:#CCCCCC;
  font-size:28rpx;
}
.user-img image{
  width:100%;
  height:100%;
  border-radius:50%;
  border:1px solid #eee;
}
.user-contact{
  margin-bottom:20rpx;
  background:#fff;
}
.user-Authentication{
   background:#fff;
   position: relative;
  z-index:500;
}
.next_button{
  display:flex;
  justify-content:space-between;
}
.next-btn{
  width:32rpx;
  height:32rpx;
}
.next-btn image{
  width:100%;
  height:100%;
}
.user_ren{
  color:red;
}