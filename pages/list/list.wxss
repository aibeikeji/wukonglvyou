/* pages/list/list.wxss */

page {
  width: 100%;
  height: 100%;
  background: #fff;
}

.meList {
  margin: 20rpx auto;
  width: 92%;
  height: 160rpx;
  border-radius: 16rpx;
  box-shadow: 0px 3px 20px #eee;
  margin-bottom: 20rpx;
}

.meMessage {
  display: flex;
  height: 100%;
  justify-content: space-between;
  align-items: center;
}

.meImg {
  display: flex;
  justify-content: space-around;
  margin-left: 30rpx;
 
}
.meImgs{
   padding-right: calc(50% - 60rpx);
}
.meImg2{
   padding-right: 60rpx;
}
.userPic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 16rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.userPic image, .open{
  width: 100%;
  height: 100%;
  border-radius:50%;
}


.ranking {
  color: #333;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 10rpx;
  width: 40rpx;
}

.userName {
  font-size: 28rpx;
  color: #333;
}

.userTime {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.meGive {
  padding: 50rpx 42rpx;
  height:100%;
  position: relative;
  z-index: 500;
}

.giveNum {
  text-align: center;
  color: #333;
  font-size: 24rpx;
 
}

.meLike {
  width: 37rpx;
  height: 31rpx;
}

.meLike image {
  width: 100%;
  height: 100%;
}

.bangTop {
  position: relative;
}

.top1 {
  width: 58rpx;
  height: 38rpx;
  position: absolute;
  top: -34rpx;
  left: 28rpx;
}

.top1 image {
  width: 100%;
  height: 100%;
}

.totalitems {
  width: 92%;
  margin: 0 auto;
  height: auto;
  border-radius: 16rpx;
  box-shadow: 0px 3px 20px #eee;
}

.meItems {
  width: 100%;
  height: 160rpx;
  border-bottom: 1px solid #ccc;
}

.scrollHeight {
  height: calc(100vh - 100px);
  white-space: nowrap;
}
