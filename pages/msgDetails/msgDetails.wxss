page { background-color: #fff;}

.art-title { color: #000; font-size: 48rpx;}
.art-cover-picture { position: relative; background: #f5f5f5;}
.art-cover-picture > img{ display: block; width: 100%;}
.art-cover-btns { position: absolute; right: 0; bottom: 10%;}
.art-cover-link img { display: inline-block; vertical-align: middle; margin-right: 0.1rem;}

.art-title { margin: 15rpx 0; line-height: 1.3;}
.art-date { padding: 10rpx 0 30rpx 0;}
.art-content { font-size: 28rpx; /*rpx*/}
.art-cover-picture { min-height: 340rpx;}
.art-cover-picture > image{ width: 690rpx; height: 390rpx;}

.art-cover-btns {}
.art-cover-link image { width: 30rpx; height: 34rpx;}
.art-cover-link { border-radius: 35rpx; font-size: 24rpx; /*rpx*/ margin-right: 30rpx;}


.audio-block {
    margin-bottom: 30rpx;
    padding: 15rpx 30rpx;
    border: 2rpx #e5e5e5 solid;
    background-color: #f5f5f5;
    border-radius: 6rpx;
}
.audio-btn { float: left; margin-top: 16rpx; width: 45px; height: 45px; overflow: hidden;
    /*background: url("data:image/png;base64,") no-repeat; */
    background-size: 100%;}
.audio-cont { margin-left: 140rpx;}

@keyframes audioplay
{
    0% { margin-top: 0;}
    33% { margin-top: -45px;}
    66% { margin-top: -90px;}
}
.audio-play .audio-play-img {
    animation: audioplay 0.8s steps(1) infinite;
}

/*横条样式*/
.audio-progress-bar[type=range] {
    -webkit-appearance: none;/*清除系统默认样式*/
    width: 100%;
    background: -webkit-linear-gradient(#FFBB4A, #F0B040) no-repeat, #E5E5E5;/*设置左边颜色为#61bd12，右边颜色为#ddd*/
    background-size: 0 100%;/*设置左右宽度比例*/
    height: 4rpx;/*横条的高度*/
}
/*拖动块的样式*/
.audio-progress-bar[type=range]::-webkit-slider-thumb {
    -webkit-appearance: none;/*清除系统默认样式*/
    height: 26rpx;/*拖动块高度*/
    width: 26rpx;/*拖动块宽度*/
    background: #FFBB4A;/*拖动块背景*/
    border-radius: 50%; /*外观设置为圆形*/
    border: solid 1rpx #ddd; /*设置边框*/
}
