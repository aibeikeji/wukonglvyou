/**index.wxss**/
page { overflow: hidden; position: fixed; top: 0; bottom: 0;width: 100%;}
.header{
  display:flex;
  justify-content: space-between;
  flex-direction:row;
  width:100%;
  height:90rpx;
  background-color:#fff;
}
.head-left,.head-right{
  display:flex;
  flex-direction:row;
}
.head-left{
  margin-left:20rpx;
  margin-top:24rpx;
}
.head-right{
  margin-right:20rpx;
  line-height:90rpx;
}
.address{
  display:inline-block;
  min-width:140rpx;
  white-space:nowrap;
  overflow:hidden;
  height:48rpx;
  line-height:48rpx;
  font-size:24rpx;
  border-radius:20rpx;
  background-color:#EFEFEF;
  text-align: center;
  padding:0 5px;

}
.address text{
  vertical-align:middle;
}
.down{
  display:inline-block;
  margin-left:10rpx;
  width:14rpx;
  height:8rpx;
  vertical-align:middle;
}
.wealter{
 display:inline-block;
 margin-left:20rpx;
}
.wealter-img{
  width:32rpx;
  height:26rpx;
  vertical-align:middle;
}
.wealter text{
  color:#A1A1A1;
  font-size:22rpx;
  margin-left:10rpx;
  vertical-align:middle;
  display:inline-block;
}
.search-icon{
  display:inline-block;
  width:40rpx;
  height:40rpx;
}
.message-icon{
  display:inline-block;
  width:36rpx;
  height:32rpx;
}
.bar-content{
  width:100%; 
  display: flex; 
  display: -webkit-box; 
  flex-direction: column;
  line-height:90rpx;
}
.tab-item{
  padding:0 40rpx;   
  flex: 1;
}
.list-navigator-hover{
  background-color:transparent;
}
.map-over-btn {
    padding: 0;
    width: 106rpx;
    height: 106rpx;
    background: transparent;border: none;
}
.map-over-btn:active,.scan-code-btn:active { opacity: .7;}
.scan-code-btn {
    width: 300rpx;
    height: 100rex;
    line-height: 100rpx;
    border-radius: 50rpx;
    color: #fff;
    font-size: 32rpx;
    justify-content: center;
    display: flex;
    align-items: center;
}
.scan-code-btn image {width: 44rpx;height: 34rpx; vertical-align: middle; margin-right: 6rpx;}
.map-controls {
    position: absolute;
    z-index: 9;
    bottom: 0;
    display: flex;
    width: 100%;
    align-items: flex-end;
}
.map-controls-left {
    width: 128rpx;
    text-align: right;
    padding-bottom: 24rpx;
}
.map-controls-right {
    width: 128rpx;
    text-align: left;
    padding-bottom: 24rpx;
}
.map-controls-center {
    flex: 1;
    text-align: center;
    padding-bottom: 40rpx;
}
.map-controls .map-over-btn { margin-top: 40rpx;}


.reserve-box {
    flex: 5;
    display: flex;
    flex-direction: column;
    z-index:8;
    width: 100%;
    background: #fff;
    box-shadow:0 -2rpx 0rpx #ccc inset;
}
.reserve-colum {
    line-height: 94rpx;
    font-size: 26rpx;
}
.over-text {white-space: nowrap;  text-overflow: ellipsis;  overflow: hidden;}

.cycling-box{ display: flex; flex: 1; }
.cycling-box2 { display: flex; align-items: center; }
.reserve-cont { flex: 1;}
.reserve-bell { width: 180rpx; text-align: center;}
.reserve-bell:active { opacity: 0.5;}

.reserve-colum image { width: 24rpx; height: 34rpx; margin: 32rpx 12rpx 0 30rpx; vertical-align: text-top;}
.reserve-btn-box { padding: 0 30rpx 30rpx 30rpx;}
.ico-bell { width: 40rpx; height: 49rpx;}
.reserve-info {
    display: flex;
    align-items: center;
}
.reserve-info .over-text { width: 460rpx;}
.reserve-info image,.reserve-state image { width: 24rpx; height: 34rpx; padding: 0rpx 20rpx 0 0;}
.reserve-cancel-btn { width: 210rpx; color: #fff; padding: 30rpx 0; text-align: center;}

.index-map-box { position: relative; width: 100%;}

.reserve-state { padding: 22rpx 30rpx; line-height: 1;}

.win-dialog {background-color: rgba(0,0,0,0.7); width: 100%; position: fixed ;height: 100%;
    z-index: 10; top: 0; left: 0; display: flex;}
.w-dia-box { height: 100%; width: 100%; flex: 1; align-items: center; text-align: center; display: flex;}
.w-dia-content {
    position: relative;
    background-color: #fff; border-radius: 10rpx;
    width: 80%; margin: 0 auto;
    padding: 190rpx 30rpx 24rpx;
}

.w-dia-title { text-align: center; font-size: 32rpx !important; padding: 0 0 10rpx 0; margin-bottom: 40rpx; position: relative;}
