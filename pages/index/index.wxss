.filter-bar { display: flex; flex-direction: row; width: 100%; height: 90rpx; background-color: #fff;}
.filter-bar .item { flex: 1; text-align: center; display: flex; align-items: center; justify-content: center;}
.filter-bar text {  line-height: 1.6; padding: 0 10rpx; color: #888;}
.filter-bar .active text{
  border-bottom:2px solid #FFBB4A;
