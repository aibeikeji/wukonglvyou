.reserve-qrcode {
    background: -webkit-linear-gradient(left , rgb(255, 207, 0) , rgb(255, 187, 74) 100%);
    width: 130rpx;
}
.reserve-qrcode image { width: 40rpx; height: 40rpx;}
.cover-filter { position: absolute; top: 32rpx; right: 32rpx;}
