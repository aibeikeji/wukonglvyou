/**feedback.wxss**/
.pos-r-btn { position: absolute; top: 0; bottom: 0; right: 30rpx; padding: 20rpx 0 0 30rpx;}

.feedback-wrap { flex: 1; display: flex; background-color: #fff; width: 100%; flex-direction: column;}
.fb-code-box { display: flex; border: 2rpx #fdae3b solid; border-radius: 8rpx;}
.fb-code-box input { padding: 24rpx 26rpx; font-size: 30rpx; color: #000;}
.fb-code-btn { padding: 24rpx 26rpx; }
.fb-code-btn image { margin-top: 8rpx; width: 44rpx; height: 34rpx;}
.fb-problem-list > view { display: inline-block; width: 30%; margin-right: 4.8%; margin-top: 16rpx; font-size: 26rpx; color: #b2b2b2; text-align: center;
    border-radius: 10rpx;  border: 2rpx #e5e5e5 solid; line-height: 2.8; box-sizing: border-box;
}
.fb-problem-list > view:nth-child(3n+0) { margin-right: 0;}
.fb-problem-list .active { color: #fdae3b; border-color: #fdae3b;}
.fb-upimg-list { overflow: hidden;}
textarea { margin: 20rpx 0 50rpx; height: 200rpx; font-size: 26rpx; width: 100%; border-radius: 10rpx; border: 2rpx #e5e5e5 solid; padding: 20rpx; box-sizing: border-box;}
.fb-upimg-list > view { position: relative; margin: 20rpx 20rpx 0 0; float: left; border: 2rpx #e5e5e5 solid; width: 116rpx; height: 116rpx; box-sizing:border-box; }
.fb-upimg-list .upimg { float: left; width: 112rpx; height: 112rpx; box-sizing: border-box;}
.fb-upimg-list .fb-up-btn { border: none;}
.fb-up-btn image { width: 114rpx; height: 116rpx;}
.remove-img { position: absolute; width: 40rpx; height: 40rpx; right: -10rpx; top: -10rpx;}

