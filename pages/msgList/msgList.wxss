.msg-list {
    padding: 20rpx 20rpx 0 20rpx;
}
.msg-list .item {
    margin-bottom: 20rpx;
    background-color: #fff;
    border-radius: 8rpx;
}
.msg-list .item:after {
    border-radius: 16rpx;
}
.msg-list-pic {
    display: block;
    margin: 0 auto 20rpx;
    width: 670rpx;
    height: 390rpx;
}
.plr-20 { padding-left: 20rpx; padding-right: 20rpx;}
.p-20 { padding: 20rpx;}
.fz-30 { font-size: 30rpx;}
page{
  width:100%;
  height:100%;
  background:#fff;
}
.msgCon{
  margin:0 30rpx;
  height:170rpx;
  border-bottom:1px solid #ccc;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
.msgCon:last-child{
  border-bottom:0;
}
.mesIcon{
  width:80rpx;
  height:80rpx;
  position:relative;
  border-radius:50%;
}
.title{
 font-size:32rpx;
 color:#000;
  overflow: hidden;
text-overflow: ellipsis;
/* white-space: nowrap; */
}
.mesTxt{
  color:#999;
  font-size:26rpx;
  overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
width:80%;
margin-top:10rpx;
}
.mesTimer{
  color:#ccc;
  font-size:24rpx;
}
.false{
  width:16rpx;
  height:16rpx;
  background:red;
  border-radius:50%;
  position:absolute;
  top:-10rpx;
  right:-10rpx;
}
.mesText{
  /* margin-left:24rpx; */
  width:70%;
  overflow:hidden;
text-overflow: ellipsis;
white-space: nowrap;
}
.mesIcon image{
  width:100%;
  height:100%;
  border-radius:50%;
}