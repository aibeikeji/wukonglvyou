/* pages/depositRecharge/depositRecharge.wxss */
page{
  width:100%;
  height:100%;
  background:#fff;
}
.refund-alter{
  margin-top:40rpx;
  color:#FF3B3B;
  font-size:28rpx;
  margin:40rpx 30rpx 40rpx 30rpx;
}
.wait-refund{
  color:#333333;
  font-size:32rpx;
  font-weight:bold;
  margin-bottom:120rpx;
  margin-left:30rpx;
  margin-top:80rpx;
}
.refund-list{
  margin:0 30rpx;
  display:flex;
  justify-content:flex-start;
  flex-wrap:wrap;
  flex-direction: row;
}
.refund-item{
  width:156rpx;
  height:100rpx;
  border:1px solid #E6E6E6;
  border-radius:8rpx;
  text-align:center;
  margin-bottom:24rpx;
  margin-right:22rpx;
  position:relative;
}
.refund-item:nth-child(4){
  margin:0;
}
.pName{
  font-size:28rpx;
  color:#333333;
  margin-top:12rpx;
  margin-bottom:6rpx;
  animation:lanimation 2.5s ease-in infinite;
}
.pPrice{
  font-size:24rpx;
  color:#CCCCCC;
}
.refund-btn{
   width:100%;
}
.refund-btn button{
  margin:0 50rpx;
  height:88rpx;
  line-height:88rpx;
  color:#fff;
  font-size:36rpx;
  border-radius:80rpx;
  background:#ffce45;
}
/* 此处是切换class */
.choiceSelected{
  border:1px solid #ffce45;
  background:url(data:image/png;base64,) no-repeat;
  background-size:38rpx 40rpx;
  background-position:bottom right;
}
.choiceSelected view{
  color:#ffce45;
}